<section id="moreSocialProof" class="pt-10 md:py-10 xl:flex xl:justify-center">
  <div class="container px-3 md:px-6">
    <div class="flex flex-col items-center text-center gap-4 mb-12">
      <h2 class="text-3xl font-bold tracking-tight">
        Únete a Miles de Clientes Satisfechos
      </h2>
      <p class="text-sidebar-primary-foreground md:text-lg xl:text-xl max-w-[800px]">
        Descubre lo que dicen las personas sobre su experiencia con nuestras
        gafas
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {testimonialsSecondSection.map((testimonial) => (
        <div
            class="relative bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-md border border-white/20 rounded-2xl p-4 hover:border-amber-500/50 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-amber-500/20 group flex flex-col"
            
          >
            {/* Verified Badge */}
            {testimonial.verified && (
              <div class="absolute -top-1 -right-0 z-10">
                <div class="bg-green-500 rounded-full shadow-lg border-2 border-white/20">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="white">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
            )}

            {/* Star Rating */}
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill={i < testimonial.rating ? "#FFC000" : "none"}
                  stroke={i < testimonial.rating ? "#FFC000" : "#666"}
                  stroke-Width="2"
                  class="drop-shadow-sm"
                >
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                </svg>
              ))}
            </div>

            {/* Testimonial Content */}
            <p class="text-gray-200 text-base leading-relaxed mb-6 flex-grow">
              "{testimonial.content}"
            </p>

            {/* Result Badge */}
            <div class="mb-4">
              <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-green-500/20 border border-green-500/40 rounded-full">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="#10b981">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-xs font-semibold text-green-400">
                  {testimonial.result}
                </span>
              </div>
            </div>

            {/* Author Info */}
            <div class="flex items-center gap-3 pt-4 border-t border-white/10">
              <div class="relative">
                <div class="h-12 w-12 rounded-full overflow-hidden ring-2 ring-amber-500/30">
                  <img
                    src={testimonial.img}
                    alt={testimonial.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-0.5">
                  <p class="font-semibold text-white text-sm">
                    {testimonial.name}
                  </p>
                  {testimonial.verified && (
                    <svg
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="#10b981"
                    >
                      <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                </div>
                <p class="text-xs text-gray-400">{testimonial.role}</p>
                <p class="text-xs text-gray-500 flex items-center gap-1">
                  <svg
                    width="12"
                    height="12"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" />
                  </svg>
                  {testimonial.location}
                </p>
              </div>
            </div>
          </div>
      ))}
    </div>
  </div>
</section>
